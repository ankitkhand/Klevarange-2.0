<style>
  /* for loading when clicking on a ATC button */
  button.cart__checkout-button.loading_status,
  button.cart__checkout-button.loading_status svg,
  button.cart__checkout-button.se-processed,
  button.cart__checkout-button.se-processed svg{
    color: transparent!important;
  }

  .btn_loading_animation {
    opacity: 0;
    transition: 0.1s all;
  }

  button.loading_status .btn_loading_animation, button.se-processed .btn_loading_animation {
    opacity: 1!important;
  }

  .btn_loading_animation .lds-ellipsis {
    display: inline-block;
    position: absolute;
    width: 60px;
    height: 100%;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .btn_loading_animation .lds-inner {
    height: 10px;
    width: 70px;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
  }

  .btn_loading_animation .lds-inner div {
    position: absolute; 
    top: 0;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #fff;
    animation-timing-function: cubic-bezier(0, 1, 1, 0);
    display: block;
  }

  .btn_loading_animation .lds-ellipsis .lds-inner div:nth-child(1) {
    left: 0;
    animation: lds-ellipsis1 0.6s infinite;
  }

  .btn_loading_animation .lds-ellipsis .lds-inner div:nth-child(2) {
    left: 0;
    animation: lds-ellipsis2 0.6s infinite;
  }

  .btn_loading_animation .lds-ellipsis .lds-inner div:nth-child(3) {
    left: 26px;
    animation: lds-ellipsis2 0.6s infinite;
  }

  .btn_loading_animation .lds-ellipsis .lds-inner div:nth-child(4) {
    left: 50px;
    animation: lds-ellipsis3 0.6s infinite;
  }

  @keyframes lds-ellipsis1 {
    0% {
      transform: scale(0);
    }
    100% {
      transform: scale(1);
    }
  }

  @keyframes lds-ellipsis3 {
    0% {
      transform: scale(1);
    }
    100% {
      transform: scale(0);
    }
  }

  @keyframes lds-ellipsis2 {
    0% {
      transform: translate(0, 0);
    }
    100% {
      transform: translate(24px, 0);
    }
  }
  /* end */
</style>

<div class="btn_loading_animation">
  <div class="lds-ellipsis product_loading_gif">
    <div class="lds-inner">
      <div></div>
      <div></div>
      <div></div>
      <div></div>
    </div>
  </div>
</div>