<script>
    let expandBtn = document.querySelector('.arrowlink.readmore');
    let closeBtn = document.querySelector('.arrowlink.readless');

    expandBtn.addEventListener('click', function(e){
        e.preventDefault();
        this.style.display = 'none';

        this.closest('.gridclass_child').querySelector('.dropdownsection').style.display = 'block';
    })

    closeBtn.addEventListener('click', function(e){
        e.preventDefault();

        this.closest('.gridclass_child').querySelector('a.readmore').style.display = 'block';
        this.closest('.dropdownsection').style.display = 'none';
    })

    let dropdownChild = document.querySelectorAll('.dropdownsection .dropdownsection_child');
    dropdownChild.forEach(function(el){
        el.addEventListener('click', function(e){
            e.preventDefault();
            this.classList.toggle('active');
        })
    })
</script>