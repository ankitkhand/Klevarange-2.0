                    <h5 class="designfont">{{- section.settings.asseenontv -}}</h5>
                </div>

                <!-- youtube -->
                  <style>
                    .embed-container {
                      position: relative;
                      padding-bottom: 56.25%;
                      height: 0;
                      overflow: hidden;
                      max-width: 100%;
                    }
                    .embed-container iframe,
                    .embed-container object,
                    .embed-container embed {
                      position: absolute;
                      top: 0;
                      left: 0;
                      width: 100%;
                      height: 100%;
                    }
                  </style>
      
                  <div class="embed-container">

                    <iframe src="https://youtube.com/embed/{{- section.settings.vimeo | remove: 'https://youtu.be/' -}}" frameborder="0" allowfullscreen=""
                        allow=""
                    >
                    </iframe>
                    
                  </div> 
                <!-- end youtube -->
                {% else %}
                  <img src="{{ section.settings.replace-vid | img_url: '600x' }}" loading="lazy" alt="{{- section.settings.title -}}" >
                {% endif %}
              
            </div>
        </div>
                    

    </div>
</div>


{% schema %}
    {
        "name": "Product: Vimeo Section",
        "class": "global_product_desc",
        "settings": [
            {
                "type": "html",
                "label": "Mini Title",
                "id": "minititle",
                "default": "Make your mattress feel brand new instantly!"
            },
            {
                "type": "color",
                "label": "Mini Title Color",
                "id": "mini-color",
                "default": "#3954a3"
            },
            {
                "type": "html",
                "label": "Title",
                "id": "title",
                "default": "The Best Selling Mattress Topper"
            },
            {
                "type": "html",
                "label": "As Seen On TV",
                "id": "asseenontv",
                "default": "As Seen On TV!"
            },
            {
                "type": "html",
                "id": "vimeo",
                "label": "Vimeo Video URL",
                "default": "https://youtu.be/l4zMRrVDPu0"
            },
            {
                "type": "color",
                "label": "Background Color",
                "id": "bg-color",
                "default": "#e9f5fc"
            },
            {
              "type": "header",
              "content": "Image"
            },
            {
              "type": "image_picker",
              "label": "Replace video",
              "id": "replace-vid"
            },
            {
                "type": "range",
                "label": "Padding Top",
                "id": "p-top",
                "min": 1,
                "max": 8,
                "unit": "em",
                "default": 3
            },
            {
                "type": "range",
                "label": "Padding Bottom",
                "id": "p-bottom",
                "min": 1,
                "max": 8,
                "unit": "em",
                "default": 3
            }

        ],
        "blocks":[
            {
                "type": "column",
                "name": "column",
                "settings": [
                    {
                        "type": "image_picker",
                        "label": "Icons",
                        "id": "icon"
                    },
                    {
                        "type": "html",
                        "label": "Title",
                        "id": "listtitle"
                    }
                ]
            }
        ],
        "presets":[
            {
                "name": "Product: Vimeo Section"   
            }
        ]
    }
{% endschema %}