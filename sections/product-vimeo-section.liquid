{% style %}
    .vimeo_section.{{ section.id }} .content_ h6{
        color: {{ section.settings.mini-color }};
        font-size: clamp(14px, 2vw, 16px);
        font-weight: 600;
        margin-bottom: clamp(1rem, 2vw, 2rem);
    }

    .vimeo_section.{{ section.id }}{
        background-color: {{ section.settings.bg-color }};
        padding: clamp(1.5em, 4vw, {{ section.settings.p-top }}em) 0 clamp(1.5em, 4vw, {{ section.settings.p-bottom }}em);
    }

    .vimeo_section.{{ section.id }} .pos_absolute {
        display: flex!important;
        justify-content: flex-end;
        align-items: center;
        gap: 10px;
        height: auto!important;
    }

    .vimeo_section.{{ section.id }} .pos_absolute h5 {
        position: relative;
        bottom: 17px;
        transform: rotate(-5deg);
        margin: 0;
    }
{% endstyle %}


<div class="vimeo_section {{ section.id }}">
    <div class="page-width">

        <div class="product_two_col_grid">
            <div class="content_">
                <h6>{{- section.settings.minititle -}}</h6>
                <h2 class="p_title">{{- section.settings.title -}}</h2>

                <ul class="icons">
                    {%- for block in section.blocks -%}
                        <li class="{% unless block.settings.icon == nil %}listicon_not{% endunless %}">
                            {% unless block.settings.icon == nil %}
                                <img src="{{- block.settings.icon | img_url: '60x' -}}" loading="lazy" alt="{{ block.settings.listtitle }}">
                            {% endunless %} 
                            {{ block.settings.listtitle }}
                        </li>
                    {%- endfor -%}
                </ul>
            </div>

            <div class="left medias desktop pos_relative">

              {% if section.settings.replace-vid == blank %}
                
                <div class="pos_absolute">
