                                                    </g>
                                                </g>
                                            </g>
                                        </g>
                                    </svg>
                            </p>
                        </div>

                    </div>

                    <h3>{{- block.settings.mini-title }} <span>{{ block.settings.title -}}</span></h3> 
                    
                </a>
            {% endfor %}
        </div>
    </div>
</div>

{% schema %}
{
   "name": "Six Featured Collection",
   "max_blocks": 5,
   "settings": [
        {
            "type": "html",
            "label": "Title",
            "id": "sectiontitle",
            "default": "Shop Best Selling Sleep Range"
        }
    ],
   "blocks": [
      {
        "name": "Column",
        "type": "collection",
        "settings": [
            {
                "type": "html",
                "label": "Mini Title",
                "id": "mini-title",
                "default": "Mini Title"
           },
           {
                "type": "html",
                "label": "Title",
                "id": "title",
                "default": "Title"
            },
            {
                "type": "image_picker",
                "label": "Image",
                "id": "img"
            },
            {
                "type": "html",
                "label": "Button Name",
                "id": "view",
                "default": "Shop Now"
            },
            {
                "type": "url",
                "label": "URL",
                "id": "url"
            }
        ]
      }
    ],
   "presets": [
       {
           "category": "Column",
           "name": "Six Featured Collection",
           "blocks": [
                {
                   "type": "collection"
                },
                {
                    "type": "collection"
                },
                {
                    "type": "collection"
                },
                {
                    "type": "collection"
                },
                {
                    "type": "collection"
                }
           ]
       }
    ]
}
{% endschema %}
