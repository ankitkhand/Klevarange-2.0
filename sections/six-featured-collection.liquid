<div class="six_featured_collection">
    <div class="page-width">
        <h2 class="home_title">{{- section.settings.sectiontitle -}}</h2>
        <div class="grid_col">
            {% for block in section.blocks %}
                <a href="{{- block.settings.url -}}" class="pos_relative child-{{- forloop.index -}}">
                   <div class="pos_relative imgsection">
                        {%- if block.settings.img == nil -%}
                            {{ 'lifestyle-1' | placeholder_svg_tag }}
                        {% else %}
                            <img srcset="
                                {{ block.settings.img | img_url: '160x' }} 160w,
                                {{ block.settings.img | img_url: '168x' }} 168w,
                                {{ block.settings.img | img_url: '689x' }} 689w,
                                "
                                sizes="(max-width: 520px) 160w,(max-width: 1024px) 168px, 689px)"
                                alt="{% if block.settings.image.alt %}{{ block.settings.image.alt }}{% else %}Super Sleeper Pro - {{ block.settings.title }} {% endif %}" loading="lazy" class="thumb-img">
                        {%- endif -%}

                        <div class="content">
                            <p class="pos_relative">
                                <span class="pos_relative">
                                    {{- block.settings.view -}}
                                </span>
    
