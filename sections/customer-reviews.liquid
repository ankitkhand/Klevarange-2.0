{% schema %}
{
   "name": "Review",
   "max_blocks": 12,
   "settings":[
        {
            "id": "heading",
            "type": "text",
            "label": "Heading",
            "default": "Customers"
        },
        {
            "id": "checkbox",
            "type": "checkbox",
            "label": "Autoplay",
            "default": false
        },
        {
           "type": "image_picker",
           "label": "Image",
           "id": "image"
        },
        {
            "type": "url",
            "label": "URL",
            "id": "url"
         }
   ],
   "blocks":[
        {
            "type": "review",
            "name": "Review",
            "settings":[
                {
                   "type": "text",
                   "id": "title",
                   "label": "Title"
                },
                {
                   "type": "html",
                   "id": "body",
                   "label": "Body"
                },
                {
                    "type": "text",
                    "id": "name",
                    "label": "Name"
                 }
            ]
        }
   ],
  "presets": [
      {
          "category": "Review",
          "name":"Display Review"
      }
  ]
}
{% endschema %}

<style>
    .manual_review .grid{
        display: grid;
        grid-gap: 10px;
        padding: 0 20px;
        grid-auto-flow: column;
        grid-auto-columns: 33.33%;
        overflow: hidden;
        overflow-x: scroll;
    }
</style>


<script>
    let reviewCarousel = document.querySelector('.review_contents .gridcol')

    let reviewCarouselE = new Flickity(reviewCarousel, {
        imagesLoaded: true,
        contain: true,
        percentPosition: true,
        autoPlay: {{ section.settings.checkbox }},
        initialIndex: 1
    })
</script>